<?xml version="1.0" encoding="UTF-8"?>

<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>exec:exec</goal>
        </goals>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>exec:exec</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
            <debug.arg>Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</debug.arg>
        </properties>
    </action>
    <action>
        <actionName>debug.test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <forkMode>once</forkMode>
            <debug.arg>Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</debug.arg>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
</actions>
